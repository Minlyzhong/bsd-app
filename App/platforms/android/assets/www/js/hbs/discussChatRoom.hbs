{{#.}}
	{{#compare owner '!=' userId}}
		{{#compare time '!=' ''}}
		<li><div class="discussTs" style="width:{{strWidth}}px">{{time}}</div></li>
		{{/compare}}
		<li class="align-top">
	      <div class="item-content">
	        <div class="item-media"><img src="img/icon/icon-user.png" style="border-radius: 50%;width: 38px;"/></div>
	        <div class="item-inner"style="margin-left: 0px;">
				<div class="arrow-left"></div>
				<div class="item-title label" style="font-weight: 400;color: gray;margin-left: 10px;width: 100%;">{{userName}}</div>
	          	<div class="item-text">{{content}}</div>
	        </div>
	      </div>
	    </li>
	{{else}}
		{{#compare time '!=' ''}}
		<li><div class="discussTs" style="width:{{strWidth}}px">{{time}}</div></li>
		{{/compare}}
		<li class="align-top">
	      <div class="item-content">
	        <div class="item-inner"style="margin-left: 0px;">
				<div class="arrow-right"></div>
				<div class="item-title label" style="font-weight: 400;color: gray;margin-left: 10px;width: 100%;text-align: right;">{{userName}}</div>
	          	<div class="item-text"style="margin-left: 69px;margin-right: -3px;float: right;background: rgba(216,244,253,1);">{{content}}</div>
	        </div>
	        <div class="item-media"style="margin-right: 15px;"><img src="img/icon/icon-user.png" style="border-radius: 50%;width: 38px;"/></div>
	      </div>
	    </li>
	{{/compare}}
{{/.}}